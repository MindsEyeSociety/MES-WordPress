.icon
	font-family 'icomoon'

/* Fontspring font face: http://www.fontspring.com/blog/the-new-bulletproof-font-face-syntax */
@font-face
	font-family 'icomoon'
	src url( '/assets/fonts/icomoon.eot?#ie-fix' ) format( 'embedded-opentype' ),
		url( '/assets/fonts/icomoon.woff' ) format( 'woff' ),
		url( '/assets/fonts/icomoon.ttf' ) format( 'truetype' ),
		url( '/assets/fonts/icomoon.svg#icomoon' ) format( 'svg' )

icon( class, code )
	.icon-{class}:before
		content '\e' + code

icon( search, 600 )
icon( newtab, 601 )
icon( googleplus, 602 )
icon( facebook, 603 )
icon( twitter, 604 )
icon( arrow-left, 605 )
icon( arrow-down, 606 )
icon( arrow-up, 607 )
icon( arrow-right, 608 )