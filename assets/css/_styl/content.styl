.content
	@extend $common-container
	position relative

	&__main,
	&__widgets
		background color-background embedurl( '../../images/noise-50x50.png' )
		padding size-gutter
		box-shadow inset 0 0 size-gutter rgba(0, 0, 0, 0.1)

	&__main
		@media media-tablet
			width unquote( 'calc( 100% - ' + ( size-sidebar + size-border ) + ' )' )

	&__widgets
		display none
		width size-sidebar
		absolute top 0 right 0
		bottom 0

		@media media-tablet
			display block

.main-navigation,
.site-footer
	@extend $common-bar
	margin size-gap 0

	a
		color color-light

.site-branding img
	display block
	width auto
	margin auto

.site-footer
	text-align center
	font-size 75%

	a
		@extend $common-bar-child
		text-decoration none
		display block
		padding size-gap
