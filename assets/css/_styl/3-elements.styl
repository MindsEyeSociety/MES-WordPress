hr
	background-color color-accent
	border 0
	height 1px
	margin-bottom 1.5em

ul,
ol
	margin 0 0 1.5em 3em

ul
	list-style disc

ol
	list-style decimal

li
	& > ul,
	& > ol
		margin-bottom 0
		margin-left 1.5em

dt
	font-weight bold

dd
	margin 0 1.5em 1.5em

img
	/* Make sure images are scaled correctly. */
	height auto 
	/* Adhere to container width. */
	max-width 100%

figure
	margin 0

table
	margin 0 0 1.5em
	width 100%

th
	font-weight bold

fieldset
	border 1px solid color-accent
	padding size-gutter
	margin size-gutter
