h1, h2, h3
	margin-bottom 1rem

h1
	font-size 160%

h2
	font-size 140%

h3
	font-size 110%

h1, h2, h3, b, strong
	font-weight bold

dfn,
cite,
em,
i
	font-style italic

p
	margin 1rem 0
	line-height 1.75rem

a
	color color-accent
	text-decoration none

	&:visited
		color darken(color-accent, 10%)

	&:hover,
	&:focus,
	&:active
		color lighten(color-accent, 10%)

hr
	background-color color-accent
	border 0
	height 1px
	margin-bottom 1.5em

ul,
ol
	margin 0 0 1.5em 1.5em

ul
	list-style disc

ol
	list-style decimal

li
	& > ul,
	& > ol
		margin-bottom 0
		margin-left 1.5em

dt
	font-weight bold

dd
	margin 0 1.5em 1.5em

img
	/* Make sure images are scaled correctly. */
	height auto
	/* Adhere to container width. */
	max-width 100%

figure
	margin 0

fieldset
	border 1px solid color-accent
	padding size-gutter
	margin size-gutter

table
	margin 0 0 1.5em
	width 100%

th
	padding-bottom ( size-gutter / 2 )
	font-weight bold

td
	padding ( size-gutter / 2 ) 0
	border-top 1px solid color-body
	border-top 1px solid alpha( color-body, 20% )
	vertical-align top


legend
	clear both
	color color-head
	font-family font-head
	font-weight 700
	line-height 1.5em

blockquote
	margin 0 1.5em

	cite
		display block
		margin-top 1rem
		text-align right
		font-size 80%

address
	margin 0 0 1.5em

pre
	background #eee
	font-family 'Courier 10 Pitch', Courier, monospace
	font-size 0.8rem
	line-height 1.6
	margin-bottom size-gutter
	max-width 100%
	overflow auto
	padding size-gutter

code,
kbd,
tt,
var
	font 15px Monaco, Consolas, 'Andale Mono', 'DejaVu Sans Mono', monospace

abbr,
acronym
	border-bottom 1px dotted #666
	cursor help

mark,
ins
	background #fff9c0
	text-decoration none

small,
sup,
sub,
$aside
	font-size 75%

sup,
sub
	height 0
	line-height 0
	position relative
	vertical-align baseline

sup
	bottom 1ex

sub
	top .5ex

big
	font-size 125%
