.nav
    @extends $common-bar
    font 13px 'Century Gothic', Futura, 'URW Gothic L', Verdana, sans-serif
    margin-bottom size-border

    &__toggle
        @media media-tablet
            display none

    &__menu
        @extends $common-bar-child
        display flex
        padding .25rem

    &__link
        display block
        padding .25rem 1rem
        cursor pointer

        &,
        &:hover
            color color-light

    &__item:hover
        background-color color-hover

    &__submenu
        width 200px
        margin 0
        position absolute
        background-color color-accent
        box-shadow 0 3px 3px color-dark
        display none

    &__item:hover > &__submenu
        display block

    &__submenu &__submenu
        position absolute
        left 200px
        top 0
