// Main navigation.
.nav
	@extends $common-bar
	font 13px 'Century Gothic', Futura, 'URW Gothic L', Verdana, sans-serif
	width 100%
	max-height 100%

	@media media-tablet
		margin-bottom size-border

	&__toggle
		border none
		padding 0
		height size-nav
		width @height
		display block
		background-color darken( color-accent, 20% )
		text-align center

		&,
		&:hover,
		&:visited
			color color-light

		&:before
			@extend .icon
			@extend .icon--hamburger:before
			display block
			line-height size-nav
			font-size ( size-nav - 10px )

		@media media-tablet
			display none

	&__menu,
	&__submenu
		list-style none

	&__menu
		clearfix()
		display none
		margin 0
		background-color darken( color-accent, 20% )
		line-height ( size-nav / 2 )

		@media media-tablet
			display block
			margin size-border
			padding .25rem
			box-shadow 0 2px 2px rgba( color-dark, 0.8 )
			background-color color-body
			border 1px solid darken( color-body, 50% )
			border-top-color lighten( color-body, 50% )
			line-height inherit

	&__menu > &__item
		display block

		@media media-tablet
			float left

	&__item--children > &__link:after
		@extend .icon
		@extend .icon--arrow-down:before
		vertical-align middle

		@media media-tablet
			.nav__submenu &
				content '\e608'
				float right

	&__link
		display block
		padding .25rem 1rem
		cursor pointer

		&,
		&:visited,
		&:hover
			color color-light

		content__widgets &
			color color-accent

	&__item:hover
		background-color color-hover

		content__widgets &
			background-color transparent

	&__submenu
		margin 0
		background-color color-accent
		display none
		z-index 1

		@media media-tablet
			width 200px
			position absolute
			box-shadow 0 3px 3px color-dark

	&__item:hover > &__submenu
		display block

	&__submenu &__submenu
		@media media-tablet
			position absolute
			left 200px
			top 0

		.nav__link:after
			display none

	// Mobile navigation.
	.header--sticky &
		position fixed
		top 0
		z-index 1

		@media media-tablet
			position static

	&--toggled &__menu
		display block

	&--toggled &__toggle
		color darken( color-accent, 50% )

// Pagination.
.pagination
	overflow auto
	font-family font-nav

	&__prev
		float left

	&__next
		float right
