// Static variables and styles.

// Sizing and padding.
size-body    = 1200px // Total max size of content.
size-gutter  = 20px // Standard gutter size.
size-sidebar = 300px // Sidebar width.
size-main    = size-body - ( size-gutter * 3 ) - size-sidebar // Max width of main content.
size-border  = 5px
size-nav     = 50px

// Fonts.
font-body = 'Merriweather', serif
font-head = 'PT Serif', serif
font-sans = 'Lucida Sans Unicode', 'Lucida Sans', sans-serif
font-nav  = 'Century Gothic', Futura, 'URW Gothic L', Verdana, sans-serif

// Colors.
color-body       = #433d3d
color-head       = #000
color-background = #e6d099
color-accent     = #5e0000
color-light      = #fff
color-dark       = color-head
color-hover      = #94474d

// Media queries.
media-base = unquote( 'only screen and ' )
media-large  = media-base + unquote( '(min-width: 1200px)' )
media-normal = media-base + unquote( '(min-width: 999px)' )
media-tablet = media-base + unquote( '(min-width: 750px)' )
media-mobile = media-base + unquote( '(min-width: 450px)' )

// Include functions.
@import '_styl/functions.styl'

/**
 * Reset.
 */
global-reset()

/**
 * Base
 */
 html
     box-sizing border-box

 *, *:before, *:after
     box-sizing inherit

 body
     font 15px/1.2 font-sans
     width 100%
     max-width size-body
     margin 0 auto
     background-color color-dark


 /**
  * Common styles
  */
 @import '_styl/common'


/**
 * Typography
 */
@import '_styl/typography'


/**
 * Forms
 */
@import '_styl/forms'


/**
 * Icons
 */
@import '_styl/icons'


/**
 * Structure
 */
@import '_styl/structure'


/**
 * Navigation
 */
@import '_styl/navigation'


/**
 * Content
 */
@import '_styl/content'


/**
 * Widgets
 */
@import '_styl/widgets'


/**
 * Hacks
 */
.screen-reader-text
    clip rect( 1px 1px 1px 1px )
    position absolute !important
    height 1px
    width 1px
    overflow hidden

    &:focus
        background-color #f1f1f1
        border-radius 3px
        box-shadow 0 0 2px 2px rgba(0, 0, 0, 0.6)
        clip auto !important
        color #21759b
        display block
        font-size 14px
        font-size 0.875rem
        font-weight bold
        height auto
        left 5px
        line-height normal
        padding 15px 23px 14px
        text-decoration none
        top 5px
        width auto
        z-index 100000 // Above WP toolbar.
